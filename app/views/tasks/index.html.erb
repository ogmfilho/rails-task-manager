<h1>My tasks</h1>
<div>

  <ul style="list-style: none;">
    <% @tasks.each do |task| %>
      <li>
        <input type="checkbox" name="task" <%= "checked" if task.completed %>>
        <%= link_to task.title, task_path(task) %>
      </li>
    <% end %>
  </ul>

</div>

<%= link_to "Add a new task", new_task_path %>
